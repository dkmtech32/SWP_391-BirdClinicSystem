<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filters.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>filters.AuthorizationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DispatchFilter</filter-name>
        <filter-class>filters.DispatchFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CustomerFilter</filter-name>
        <filter-class>filters.CustomerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatchFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/Staff/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/Admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/Doctor/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/Customer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/Staff/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/Admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/Doctor/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/Customer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/Customer/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.account.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerAccountInformationServlet</servlet-name>
        <servlet-class>controllers.account.CustomerAccountInformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerDashboardInformationServlet</servlet-name>
        <servlet-class>controllers.account.CustomerDashboardInformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <servlet-class>controllers.booking.BookAppointmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrepareAppointmentBookServlet</servlet-name>
        <servlet-class>controllers.booking.PrepareAppointmentBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrepareDatetimeAppBookServlet</servlet-name>
        <servlet-class>controllers.booking.PrepareDatetimeAppBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrepareDoctorsAppBookServlet</servlet-name>
        <servlet-class>controllers.booking.PrepareDoctorsAppBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Common/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerAccountInformationServlet</servlet-name>
        <url-pattern>/Customer/custAccountInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerDashboardInformationServlet</servlet-name>
        <url-pattern>/Customer/custDashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <url-pattern>/Customer/bookAppointment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrepareAppointmentBookServlet</servlet-name>
        <url-pattern>/Customer/prepareBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrepareDatetimeAppBookServlet</servlet-name>
        <url-pattern>/Customer/prepareDatetime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrepareDoctorsAppBookServlet</servlet-name>
        <url-pattern>/Customer/prepareDocs</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>intro.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/Common/login.jsp</location>
    </error-page>
</web-app>
